<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RetrievePwActivity"
    android:orientation="vertical"
    android:padding="40dp"

    android:background="@mipmap/bg_retrieve_pw">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="30dp">
    <ImageButton
        android:id="@+id/iv_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/back_bg"
        android:layout_gravity="center"
        android:background="#d8e0f5"
        android:focusable="true"
        android:onClick="back" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="35dp"
        android:textColor="#0a2469"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/et_retrieve_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint=" 请输入账号/邮箱"
        android:background="@drawable/bg_username"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:maxLength="16"/>
    <Button
        android:id="@+id/bt_retrieve_confirm"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:text="确定"
        android:textColor="#ffffff"
        android:enabled="false"
        android:background="@drawable/button_gray"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    android:background="@mipmap/bg_register">
    <ImageView
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:src="@mipmap/boy" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:gravity="center"
        android:textSize="40dp"
        android:textColor="#191c32"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/et_register_user"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="用户名"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_register_username"
        android:drawableLeft="@mipmap/user_icon"
        android:layout_marginTop="15dp"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="10"/>
    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/bg_register_username"
        android:hint="邮箱"
        android:drawableLeft="@mipmap/email_icon"
        android:drawablePadding="10dp"
        android:layout_marginTop="15dp"
        android:inputType="textEmailAddress"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="16"/>
    <EditText
        android:id="@+id/et_register_pw"
        android:layout_width="match_parent"
        android:layout_height="50dp"
    android:paddingLeft="10dp"
        android:background="@drawable/bg_register_username"
        android:hint="密码"
        android:layout_marginTop="15dp"
        android:inputType="textPassword"
        android:drawableLeft="@mipmap/pw_icon"
        android:drawablePadding="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxLength="10"/>
    <Button
        android:id="@+id/bt_register_layout_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_gray"
        android:enabled="false"/>

</LinearLayout>